{
    "require": {
        "php": ">=8.2",
        "slim/slim": "4.*",
        "slim/psr7": "1.*",
        "slim/http": "1.*",
        "php-di/php-di": "^6.1",
        "twig/twig": "3.*",
        "illuminate/database": "11.*",
        "ext-mysqli": "*",
        "ext-pdo": "*",
        "phpunit/phpunit": "^11.0.7",
        "monolog/monolog": "^3.5",
        "psr/log": "^3.0"
    },
    "autoload":{
        "psr-4":{
            "App\\controller\\":"./src/controller/",
            "App\\model\\": "./src/model/",
            "App\\db\\": "./src/db/",
            "App\\actions\\":"./src/actions/",
            "App\\middlewares\\":"./src/middlewares/",
            "App\\utils\\":"./src/utils/",
            "logs\\" : "./logs/"
        }
    },
    "config": {
        "allow-plugins": {
            "kylekatarnls/update-helper": true
        }
    },
    "scripts": {
        "phpunit":"phpunit Tests/*"
    }
}
